# MongoDB Connection
MONGO_URI=your_mongodb_connection_string_here

# Separate MongoDB database for product catalog (optional)
# If not set, seed-catalog.js will use MONGO_URI above
PRODUCTS_MONGO_URI=

# Server Configuration
PORT=5000
NODE_ENV=production

# Backend Base URL (for image URLs in production)
# Leave empty for local development (uses relative paths)
# Set to your backend URL in production: https://your-backend.onrender.com
BASE_URL=

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here

# CORS Configuration
# Add your frontend URL here
CORS_ORIGIN=https://your-frontend.vercel.app

# Cloudinary (if using cloud storage)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Payment Gateway (if applicable)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
